{
  "$schema": "https://lingo.dev/schema/i18n.json",
  "version": 1.5,
  "locale": {
    "source": "en",
    "targets": [
      "ar",
      "ca",
      "cs",
      "de",
      "es",
      "fr",
      "hi",
      "ja",
      "ko",
      "lv",
      "pl",
      "pt",
      "ru",
      "tr",
      "hu"
    ]
  },
  "buckets": {
    "json": {
      "include": [
        "apps/mail/locales/[locale].json"
      ]
    }
  }
}